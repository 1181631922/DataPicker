<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dip"
        android:layout_marginTop="18dip"
        android:text="请选择生日（设置成功后将不能更改）"
        android:textColor="#19191a"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/lunar_select_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dip"
        android:layout_marginTop="18dip"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="2dip"
            android:text="@string/lunar"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="16dip"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/year_select_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dip"
        android:layout_marginTop="18dip"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/year_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="2dip"
            android:text="忽略年份"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="16dip"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/year_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/middle_layout"
        android:layout_width="fill_parent"
        android:layout_height="152dip"
        android:layout_marginTop="54dip">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="#b1b1b1" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="#b1b1b1" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginTop="51dip"
            android:background="#e5e5e5" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginTop="101dip"
            android:background="#e5e5e5" />

        <LinearLayout
            android:id="@+id/picker_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2px"
            android:layout_marginTop="2px"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.fanyafeng.datapicker.view.picker.WheelView
                android:id="@+id/year"
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#ff0000" />

            <com.fanyafeng.datapicker.view.picker.WheelView
                android:id="@+id/month"
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00ff00" />

            <com.fanyafeng.datapicker.view.picker.WheelView
                android:id="@+id/day"
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#0000ff" />

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/buttons_layout"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_below="@id/middle_layout">

        <FrameLayout
            android:id="@+id/v_line"
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#b1b1b1" />

        <TextView
            android:id="@+id/negative_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/v_line"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="取消"
            android:textColor="#19191a"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/positive_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dip"
            android:layout_toRightOf="@id/v_line"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="确定"
            android:textColor="#19191a"
            android:textSize="16dip" />
    </RelativeLayout>
</RelativeLayout>